# Server configuration
PORT=3000

# Required: The primary origin to allow proxying
ALLOWED_ORIGIN=https://mojhheh.gtihub.io

# Optional: Additional allowed origins (comma-separated)
# Include localhost and GitHub by default per request
ADDITIONAL_ORIGINS=http://localhost:3000,https://github.com

# Gateway base URL (used for HTML rewriting)
# Set this to your deployed gateway URL in production
GATEWAY_BASE=https://mojhheh.gtihub.io

# Token lifetime in milliseconds (default: 1 hour)
TOKEN_TTL=3600000

# Session lifetime in milliseconds (default: 24 hours)
SESSION_TTL=86400000

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# CORS origins (comma-separated, use * for all)
CORS_ORIGINS=*

# Trust proxy headers (set to true if behind nginx/cloudflare)
TRUST_PROXY=false

# WebSocket support (default: disabled)
ALLOW_WEBSOCKET=false
# ALLOWED_WS_ORIGIN=wss://example.com

# Admin key for accessing /admin/logs in production
# ADMIN_KEY=your-secure-key-here

# Node environment
NODE_ENV=development

# Allow proxying any public http(s) origin (DANGEROUS: opt-in)
# Set to true to allow browsing arbitrary public websites (private IPs still blocked)
ALLOW_ANY=true
